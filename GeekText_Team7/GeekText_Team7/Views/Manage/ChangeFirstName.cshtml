@model ChangeFirstNameViewModel
@{
    ViewData["Title"] = "Change First Name";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Manage" asp-action="ChangeFirstName" method="post" class="form-horizontal">
    <h4>Change First Name Form</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NewFirstName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewFirstName" class="form-control" />
            <span asp-validation-for="NewFirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmFirstName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmFirstName" class="form-control" />
            <span asp-validation-for="ConfirmFirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Change First Name</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
