@model ChangeLastNameViewModel
@{
    ViewData["Title"] = "Change Last Name";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Manage" asp-action="ChangeLastName" method="post" class="form-horizontal">
    <h4>Change First Name Form</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NewLastName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewLastName" class="form-control" />
            <span asp-validation-for="NewLastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmLastName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmLastName" class="form-control" />
            <span asp-validation-for="ConfirmLastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Change Last Name</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}