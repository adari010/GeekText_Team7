    @model IndexViewModel
@{
    ViewData["Title"] = "Manage your account";
}

<h2>@ViewData["Title"].</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>

<div>
    <h4>Change your account settings</h4>
    <hr />





    <dl class="dl-horizontal">
        <dt>Username:</dt>
        <dd>
            <a asp-controller="Manage" asp-action="ChangeUserName" class="btn-bracketed">Edit</a>
        </dd>
    </dl>


    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            @if (Model.HasPassword)
            {
                <a asp-controller="Manage" asp-action="ChangePassword" class="btn-bracketed">Edit</a>
            }
            else
            {
                <a asp-controller="Manage" asp-action="SetPassword" class="btn-bracketed">Edit</a>
            }
        </dd>
    </dl>

    <dl class="dl-horizontal">
        <dt>First Name:</dt>
        <dd>
            <a asp-controller="Manage" asp-action="ChangeFirstName" class="btn-bracketed">Edit</a>
        </dd>
    </dl>

    <dl class="dl-horizontal">
        <dt>Last Name:</dt>
        <dd>
            <a asp-controller="Manage" asp-action="ChangeLastName" class="btn-bracketed">Edit</a>
        </dd>
    </dl>

    <dl class="dl-horizontal">
        <dt>Address:</dt>
        <dd>
            <a asp-controller="Manage" asp-action="ChangeAddress" class="btn-bracketed">Edit</a>
        </dd>
    </dl>


    <dl class="dl-horizontal">
        <dt>Email:</dt>
        <dd>
            <a asp-controller="Manage" asp-action="ChangeEmail" class="btn-bracketed">Edit</a>
        </dd>
    </dl>




    <dl class="dl-horizontal">
        <dt>Credit Card Info:</dt>
        <dd>
            <a asp-controller="Manage" asp-action="AddCreditCard" class="btn-bracketed">Edit</a>
        </dd>
    </dl>


    <dl class="dl-horizontal">
        <dt>Avatar Image:</dt>
        <dd>
            <a asp-controller="Manage" asp-action="AvatarImage" class="btn-bracketed">Edit</a>
        </dd>
    </dl>




</div>

<div>
<form method="post" enctype="multipart/form-data" asp-controller="UploadFiles" asp-action="Index">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
</div>
